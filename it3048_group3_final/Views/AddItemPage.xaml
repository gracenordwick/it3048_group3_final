<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="it3048_group3_final.Views.AddItemPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding InputText}" />
            <Button Text="Edit" Command="{Binding BindingContext.EditCommand, Source={x:Reference Name=addPage}}" CommandParameter="{Binding}" />
            <Button Text="Delete" Command="{Binding BindingContext.DeleteCommand, Source={x:Reference Name=addPage}}" CommandParameter="{Binding}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>